<!DOCTYPE html>
<html>
  <head>
    <title>Lucky Thirteen</title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.3/jquery.min.js"></script>
    <script type="text/javascript" src="dist/date_scripts.js"></script>
    <script>
	$(document).ready(function(){
		$("#validateButton").click(function(){
			var date = $('#d1').val();
			var ret = isValidDate(date);
			$('#output1').val(ret);
		});
		$("#formatButton").click(function(){
			var date = $('#d1').val();
			var ret = formatDate(date);
			$('#output2').val(ret);
		});
	});
    </script>
  </head>
  <body>
    <h1>CSE 112 Lucky 13</h1>
    <p>Welcome to our app!</p>
		Enter date:<br>
		<input type="text" name="date" value="" id="d1" placeholder="mm/dd/yyyy">
		<input type="button" value="Validate" id="validateButton">
		<input type="button" value="Format" id="formatButton"><br><br>
		<label for="output">Date Validity: </label>
		<input type="text" id="output1"></input><br>
		<label for="output">Formatted Date: </label>
		<input type="text" id="output2"></input>
  </body>
</html>
